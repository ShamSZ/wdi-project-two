<h2>Restaurants</h2>
<p>This is where all the restaurants will be shown</p>
<% restaurants.forEach(restaurant => { %>
  <a href="/restaurants/<%= restaurant._id %>">
  <h3><%= restaurant.name %></h3>
  <img width="300px" height="200px" src="<%= restaurant.image %>"/></a>
  <p>
  <span>Cuisine: <%= restaurant.cuisine %></span>
  <span>Price: <%= '💰'.repeat(restaurant.price) %></span>
  <span>Rating: <%= '⭐️'.repeat(restaurant.rating) %></span>
  </p>
<% }) %>
