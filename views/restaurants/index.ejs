<h2>Restaurants</h2>
<p>This is where all the restaurants will be shown</p>
<p>Currently <%= restaurants.length %> restaurants available</p>
<% if(locals.isLoggedIn) { %>
  <span><a class="button" href="/restaurants/new">New Restaurant</a></span>
<% } else { %>
  <p>Log in to add new restaurants</p>
<% } %>
<% restaurants.forEach(restaurant => { %>
  <a href="/restaurants/<%= restaurant._id %>">
  <h3><%= restaurant.name %></h3>
  <img width="300px" height="200px" src="<%= restaurant.image %>"/></a>
  <p>
    <span>Cuisine: <%= restaurant.cuisine %></span>
    <span>Price: <%= '💰'.repeat(restaurant.price) %></span>
    <span>Rating:
      <% if(restaurant.averageRating === 'None'){ %>
        Not reviewed yet
      <% } else { %>
        <%= '⭐️'.repeat(restaurant.averageRating) %>
      <% } %>
    </span>
  </p>
<% }) %>
